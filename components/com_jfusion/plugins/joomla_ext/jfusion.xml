<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.jfusion.org/xml/dtd/1.5/plugin-install.dtd">
<install type="jfusion" version="1.5.0">
	<name>joomla_ext</name>
	<creationDate>J9 December 2008</creationDate>
	<author>JFusion Development Team</author>
	<authorEmail>webmaster@jfusion.org</authorEmail>
	<authorUrl>www.jfusion.org</authorUrl>
	<copyright>Copyright (C) 2008 JFusion. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.8.4-011</version>
    <revision>$revision$</revision>
    <timestamp>$timestamp$</timestamp>
	<description>JFusion plugin for second (and more) Joomla 1.5+</description>
    <update>http://update.jfusion.org/jfusion/joomla/</update>
    <master>0</master>
	<slave>0</slave>
	<dual_login>0</dual_login>
	
	<files>
		<filename>admin.php</filename>
		<filename>auth.php</filename>
		<filename>index.html</filename>
		<filename>jfusion.xml</filename>
		<filename>public.php</filename>
		<filename>user.php</filename>
	</files>
	
	<params addpath="/administrator/components/com_jfusion/elements">

		<param name="jfusionbox" type="text" default="" label="PLUGIN_GENERAL_DETAILS" description="" />
		<param name="description" type="text" size="60" label="DESCRIPTION" default="Extra joomla site #1" description="DESCRIPTION_DESC" />
		<param name="source_url" type="text" size="60" label="SOURCE_URL" default="http://www.yourdomain.com/yourdir/" description="SOURCE_URL_DESC" />
		<param name="source_path" type="text" size="60" label="SOURCE_PATH" default="" description="SOURCE_PATH_DESC" />
		<param name="joomlaversion" type="list" default="" label="JOOMLAVERSION">
			<option value="">AUTO</option>
			<option value="1.5">1.5.x</option>
			<option value="1.6">1.6+</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="login_identifier" type="list" label="LOGIN_IDENTIFIER" default="1" description="LOGIN_IDENTIFIER_DESC">
			<option value="1">USERNAME</option>
			<option value="2">EMAIL</option>
			<option value="3">USERNAME_OR_EMAIL</option>
		</param>

		<param name="jfusionbox" type="text" default="" label="DATABASE_OPTIONS" description="" />
		<param name="database_type" type="text" size="20" label="DATABASE_TYPE" default="mysql" description="DATABASE_TYPE_DESC" />
		<param name="database_host" type="text" size="20" label="DATABASE_HOST" default="" description="DATABASE_HOST_DESC" />
		<param name="database_name" type="text" size="20" label="DATABASE_NAME" default="" description="DATABASE_NAME_DESC" />
		<param name="database_user" type="text" size="20" label="DATABASE_USER" default="" description="DATABASE_USER_DESC" />
		<param name="database_password" type="password" size="20" label="DATABASE_PASSWORD" default="" description="DATABASE_PASSWORD_DESC" />
		<param name="database_prefix" type="text" size="20" label="DATABASE_PREFIX" default="" description="DATABASE_PREFIX_DESC" />
		<param name="database_charset" type="text" size="20" label="DATABASE_CHARSET" default="utf8" description="DATABASE_CHARSET_DESC" />

		<param name="jfusionbox" type="text" default="" label="USER_OPTIONS" description="" />
		<param name="username_filter" type="JFusionPlugins" label="USERNAME_FILTER" default="" description="USERNAME_FILTER_DESCR" />
		<param name="usergroup" default="" type="JFusionCustomParam" label="USERGROUP_MANAGEMENT" description="ADVANCED_USERGROUP" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="update_activation" type="list" default="1" label="UPDATE_ACTIVATION" description="UPDATE_ACTIVATION_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="update_email" type="list" default="1" label="UPDATE_EMAIL" description="UPDATE_EMAIL_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="update_block" type="list" default="1" label="UPDATE_BLOCK" description="UPDATE_BLOCK_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="create_inactive" type="list" default="1" label="CREATE_INACTIVE" description="CREATE_INACTIVE_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="create_blocked" type="list" default="1" label="CREATE_BLOCKED" description="CREATE_BLOCKED_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="allow_delete_users" type="list" default="0" label="ALLOW_DELETE_USERS" description="ALLOW_DELETE_USERS_DESCR">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>

		<param name="jfusionbox" type="text" default="" label="CURL_OPTIONS_GENERAL" description="" />
		<param name="integrationtype" type="text" size="3" label="CURL_INTEGRATIONTYPE" default="0" description="CURL_INTEGRATIONTYPE_DESC" />
		<param name="httpauth" type="list" default="" label="CURL_HTTPAUTH" description="CURL_HTTPAUTH_DESCR">
			<option value="">Disabled</option>
			<option value="any">ANY</option>
			<option value="anysafe">ANYSAFE</option>
			<option value="basic">BASIC</option>
			<option value="digest">DIGEST</option>
			<option value="gssnegotiate">Kerberos</option>
			<option value="ntlm">NTLM</option>
		</param>
		<param name="curl_username" type="text" default="" size="60" label="CURL_USERNAME" description="CURL_USERNAME_DESCR" />
		<param name="curl_password" type="password" default="" size="60" label="CURL_PASSWORD" description="CURL_PASSWORD_DESCR" />


		<param name="jfusionbox" type="text" default="" label="CURL_OPTIONS_COOKIE" description="" />
		<param name="cookie_domain" type="text" size="60" label="CURL_COOKIE_DOMAIN" default="" description="CURL_COOKIE_DOMAIN_DESC" />
		<param name="cookie_path" type="text" size="60" label="CURL_COOKIE_PATH" default="" description="CURL_COOKIE_PATH_DESC" />
		<param name="cookie_expires" type="text" size="5" label="COOKIE_EXPIRES" default="1800" description="COOKIE_EXPIRES_DESC" />
		<param name="secure" type="list" default="0" label="COOKIE_SECURE" description="COOKIE_SECURE_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="httponly" type="list" default="0" label="COOKIE_HTTPONLY" description="COOKIE_HTTPONLY_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="override" type="text" size="60" label="CURL_COOKIE_OVERRIDE" default="" description="CURL_COOKIE_OVERRIDE_DESC" />
		<param name="leavealone" type="text" size="60" label="CURL_COOKIE_LEAVEALONE" default="" description="CURL_COOKIE_LEAVEALONE_DESC" />

		<param name="jfusionbox" type="text" default="" label="CURL_OPTIONS_LOGIN" description="" />
		<param name="login_url" type="text" size="60" label="CURL_LOGIN_URL" default="" description="CURL_LOGIN_URL_DESC" />
		<param name="brute_force" type="list" default="standard" label="CURL_BRUTE_FORCE" description="CURL_BRUTE_FORCE_DESC">
			<option value="brute_force">JYES</option>
			<option value="standard">JNO</option>
		</param>
		<param name="loginform_id" type="text" size="60" label="CURL_LOGINFORM_ID" default="login" description="CURL_LOGINFORM_ID_DESC" />
		<param name="relpath" type="list" default="0" label="CURL_RELPATH" description="CURL_RELPATH_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="input_username_id" type="text" size="60" label="CURL_INPUT_USERNAME_ID" default="" description="CURL_INPUT_USERNAME_ID_DESC" />
		<param name="input_password_id" type="text" size="60" label="CURL_INPUT_PASSWORD_ID" default="" description="CURL_INPUT_PASSWORD_ID_DESC" />
		<param name="hidden" type="list" default="1" label="CURL_HIDDEN" description="CURL_HIDDEN_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="buttons" type="list" default="1" label="CURL_BUTTONS" description="CURL_BUTTONS_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>

		<param name="jfusionbox" type="text" default="" label="CURL_OPTIONS_LOGOUT" description="" />
		<param name="logout_type" type="list" default="brute_force" label="CURL_LOGOUT_TYPE" description="CURL_LOGOUT_TYPE_DESC">
			<option value="url">URL</option>
			<option value="form">FORM</option>
			<option value="brute_force">BRUTE_FORCE</option>
		</param>
		<param name="logout_url" type="text" size="60" label="CURL_LOGOUT_URL" default="" description="CURL_LOGOUT_URL_DESC" />
		<param name="relpathl" type="list" default="0" label="CURL_RELPATHL" description="CURL_RELPATHL_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>
		<param name="postfields" type="text" size="60" label="CURL_POSTFIELDS" default="" description="CURL_POSTFIELDS_DESC" />
	</params>
</install>