<?xml version="1.0" encoding="UTF-8"?>
<config>
	<language filename="mod_jfusion_activity" location="site" />
	
    <fields addfieldpath="/administrator/components/com_jfusion/fields">
        <fieldset name="basic">
            <field name="view" type="hidden" default="override" />

	        <field name="moduleclass_sfx" type="text" default="" label="MODULE_SUFFIX" description="MODULE_SUFFIX_DESCR" />
	
	        <field name="@spacer" type="spacer" default="" label="" description="" />
	
	        <field name=" " type="helptext" default="ITEMID_DESCR"/>
	
	        <field name="itemid" type="JFusionItemid" size="5" default="" description="ITEMID" />
	
	        <field name="@spacer" type="spacer" default="" label="" description="" />
	
	        <field name="display_body" type="list" default="0" label="DISPLAY_BODY" description="DISPLAY_BODY_DESCR">
	            <option value="1">JYES</option>
	            <option value="0">JNO</option>
	        </field>
	
	        <field name="new_window" type="list" default="0" label="LINK_TARGET" description="LINK_TARGET_DESCR">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
	        </field>
	
	        <field name="@spacer" type="spacer" default="" label="" description="" />
	
	        <field name="character_limit" type="text" size="5" default="150" label="DISPLAY_LIMIT" description="DISPLAY_LIMIT_DESC" />
	
	        <field name="character_limit_subject" type="text" size="5" default="50" label="DISPLAY_LIMIT_SUBJECT" description="DISPLAY_LIMIT_SUBJECT_DESC" />
	
	        <field name="result_limit" type="text" size="5" default="5" label="RESULT_LIMIT" description="RESULT_LIMIT_DESCR" />
	
	        <field name="custom_date" type="text" default="" label="CUSTOM_DATE" description="CUSTOM_DATE_DESCR" />
	
	        <field name="tz_offset" type="text" default="0" label="TZ_OFFSET" description="TZ_OFFSET_DESCR" />
	
	        <field name="result_order" type="radio" default="1" label="RESULT_ORDER" description="RESULT_ORDER_DESCR">
	            <option value="0">ASCENDING</option>
	            <option value="1">DESCENDING</option>
	        </field>
	
	        <field name="showdate" type="radio" default="1" label="SHOW_DATE" description="SHOW_DATE_DESC">
	            <option value="0">JNO</option>
	            <option value="1">JYES</option>
	        </field>
	
	        <field name="showuser" type="radio" default="1" label="SHOW_USER" description="SHOW_USER_DESCR">
	            <option value="0">JNO</option>
	            <option value="1">JYES</option>
	        </field>
	
	        <field name="display_name" type="list" default="0" label="DISPLAY_USERNAME_NAME" description="DISPLAY_USERNAME_NAME_DESCR">
	            <option value="0">USERNAME</option>
	            <option value="1">NAME</option>
	        </field>
	
	        <field name="avatar" type="radio" default="1" label="AVATAR_IMAGE" description="AVATAR_IMAGE_DESCR">
	            <option value="0">HIDE</option>
	            <option value="1">SHOW</option>
	        </field>
	        <field name="avatar_height" label="AVATAR_HEIGHT" type="text" size="5" default="53"/>
	        <field name="avatar_width" label="AVATAR_WIDTH" type="text" size="5" default="40"/>
	        <field name="avatar_software" type="list" default="jfusion" label="AVATAR_SOFTWARE"  description="AVATAR_SOFTWARE_DESC">
                <option value="cb">Community Builder</option>
                <option value="gravatar">Gravatar</option>
                <option value="jfusion">JFusion</option>
                <option value="jomsocial">JomSocial</option>
                <option value="joomunity">Joomunity</option>
	        </field>
        </fieldset>
    </fields>
    	
	<params addpath="/administrator/components/com_jfusion/elements">
		<param name="view" type="hidden" default="override" />

		<param name="moduleclass_sfx" type="text" default="" label="MODULE_SUFFIX" description="MODULE_SUFFIX_DESCR" />

		<param name="@spacer" type="spacer" default="" label="" description="" />

    	<param name=" " type="helptext" default="ITEMID_DESCR"/>

		<param name="itemid" type="JFusionItemid" size="5" default="" description="ITEMID" />

		<param name="@spacer" type="spacer" default="" label="" description="" />

		<param name="display_body" type="list" default="0" label="DISPLAY_BODY" description="DISPLAY_BODY_DESCR">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</param>

		<param name="new_window" type="list" default="0" label="LINK_TARGET" description="LINK_TARGET_DESCR">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
		</param>

		<param name="@spacer" type="spacer" default="" label="" description="" />

		<param name="character_limit" type="text" size="5" default="150" label="DISPLAY_LIMIT" description="DISPLAY_LIMIT_DESC" />

		<param name="character_limit_subject" type="text" size="5" default="50" label="DISPLAY_LIMIT_SUBJECT" description="DISPLAY_LIMIT_SUBJECT_DESC" />

		<param name="result_limit" type="text" size="5" default="5" label="RESULT_LIMIT" description="RESULT_LIMIT_DESCR" />

		<param name="custom_date" type="text" default="" label="CUSTOM_DATE" description="CUSTOM_DATE_DESCR" />

		<param name="tz_offset" type="text" default="0" label="TZ_OFFSET" description="TZ_OFFSET_DESCR" />

		<param name="result_order" type="radio" default="1" label="RESULT_ORDER" description="RESULT_ORDER_DESCR">
			<option value="0">ASCENDING</option>
			<option value="1">DESCENDING</option>
		</param>

		<param name="showdate" type="radio" default="1" label="SHOW_DATE" description="SHOW_DATE_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>

		<param name="showuser" type="radio" default="1" label="SHOW_USER" description="SHOW_USER_DESCR">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>

        <param name="display_name" type="list" default="0" label="DISPLAY_USERNAME_NAME" description="DISPLAY_USERNAME_NAME_DESCR">
            <option value="0">USERNAME</option>
            <option value="1">NAME</option>
        </param>

		<param name="avatar" type="radio" default="1" label="AVATAR_IMAGE" description="AVATAR_IMAGE_DESCR">
			<option value="0">HIDE</option>
			<option value="1">SHOW</option>
		</param>
		<param name="avatar_height" label="AVATAR_HEIGHT" type="text" size="5" default="53"/>
		<param name="avatar_width" label="AVATAR_WIDTH" type="text" size="5" default="40"/>
		<param name="avatar_software" type="list" default="jfusion" label="AVATAR_SOFTWARE" description="AVATAR_SOFTWARE_DESC">
            <option value="cb">Community Builder</option>
            <option value="gravatar">Gravatar</option>
            <option value="jfusion">JFusion</option>
            <option value="jomsocial">JomSocial</option>
            <option value="joomunity">Joomunity</option>
		</param>
	</params>	
</config>