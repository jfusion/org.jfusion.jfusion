<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="module" method="upgrade" client="site">
	<name>JFusion Activity Module</name>
	<author>JFusion Development Team</author>
	<creationDate>June 2008</creationDate>
	<copyright>Copyright (C) 2008 JFusion. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>webmaster@jfusion.org</authorEmail>
	<authorUrl>www.jfusion.org</authorUrl>
	<version>1.8.4-014</version>
    <revision>$revision$</revision>
    <timestamp>$timestamp$</timestamp>
	<description>
		This is the JFusion activity module that displays the latest
		posts from the integrated forum software.
	</description>
	<files>
		<filename module="mod_jfusion_activity">mod_jfusion_activity.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
   		<folder>tmpl</folder>		
	</files>

	<config>
        <fields name="params" addfieldpath="/administrator/components/com_jfusion/fields">
            <fieldset name="basic">
                <field name="moduleclass_sfx" type="text" default="" label="MODULE_SUFFIX" description="MODULE_SUFFIX_DESCR" />

                <field name="@spacer" type="spacer" default="" label="" description="" />

                <field name="JFusionPluginParam" type="JFusionAdvancedParam" default="" label="JFUSION_PLUGIN" feature="activity" description="JFUSION_PLUGIN_DESCR"  />

                <field name="@spacer" type="spacer" default="" label="" description="" />

                <field name=" " type="helptext" default="ITEMID_DESCR"/>

                <field name="itemid" type="JFusionItemid" size="5" default="" description="ITEMID"/>

                <field name="@spacer" type="spacer" default="" label="" description="" />

                <field name="mode" type="list" default="0" label="MODE" description="MODE_DESCR">
                    <option value="0">MODE_LAT</option>
                    <option value="1">MODE_LCT</option>
                    <option value="2">MODE_LCP</option>
                </field>

                <field name="lat_mode" type="list" default="first" label="LAT_MODE" description="LAT_MODE_DESCR">
                    <option value="0">FIRST_POST</option>
                    <option value="1">LATEST_POST</option>
                </field>

                <field name="show_reply_num" type="list" default="1" label="SHOW_REPLY_NUM" description="SHOW_REPLY_NUM_DESCR">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="linktype" type="list" default="0" label="LINK_TYPE" description="LINK_TYPE_DESCR">
                    <option value="0">THREAD</option>
                    <option value="1">POST</option>
                </field>

                <field name="display_body" type="list" default="0" label="DISPLAY_BODY" description="DISPLAY_BODY_DESCR">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="parse_text" type="list" default="plaintext" label="PARSE_TEXT" description="PARSE_TEXT_DESCR">
                      <option value="">PARSE_OPTION_RAW</option>
                      <option value="plaintext">PARSE_OPTION_PLAINTEXT</option>
                      <option value="html">PARSE_OPTION_HTML</option>
                </field>

                <field name="replace_subject" type="list" default="0" label="REPLACE_SUBJECT" description="REPLACE_SUBJECT_DESCR">
                    <option value="0">REPLACE_SUBJECT_0</option>
                    <option value="1">REPLACE_SUBJECT_1</option>
                    <option value="2">REPLACE_SUBJECT_2</option>
                </field>

                <field name="new_window" type="list" default="0" label="LINK_TARGET" description="LINK_TARGET_DESCR">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>

                <field name="forum_mode" type="radio" default="0" label="FORUM_MODE" description="FORUM_MODE_DESCR">
                    <option value="0">FORUM_MODE_0</option>
                    <option value="1">FORUM_MODE_1</option>
                </field>

                <field name="selected_forums" type="forumlist" default="" label="SELECTED_FORUMS" description="SELECTED_FORUMS_DESCR"  />

                <field name="@spacer" type="spacer" default="" label="" description="" />

                <field name="character_limit" type="text" size="5" default="150" label="DISPLAY_LIMIT" description="DISPLAY_LIMIT_DESC" />

                <field name="character_limit_subject" type="text" size="5" default="50" label="DISPLAY_LIMIT_SUBJECT" description="DISPLAY_LIMIT_SUBJECT_DESC" />

                <field name="result_limit" type="text" size="5" default="5" label="RESULT_LIMIT" description="RESULT_LIMIT_DESCR" />

                <field name="custom_date" type="text" default="" label="CUSTOM_DATE" description="CUSTOM_DATE_DESCR" />

                <field name="tz_offset" type="text" default="0" label="TZ_OFFSET" description="TZ_OFFSET_DESCR" />

                <field name="result_order" type="radio" default="1" label="RESULT_ORDER" description="RESULT_ORDER_DESCR">
                    <option value="0">ASCENDING</option>
                    <option value="1">DESCENDING</option>
                </field>

                <field name="showdate" type="list" default="1" label="SHOW_DATE" description="SHOW_DATE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                    <option value="2">TIME_SINCE</option>
                </field>

                <field name="shownew" type="radio" default="1" label="SHOW_NEWICON" description="SHOW_NEWICON_DESCR">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="showuser" type="radio" default="1" label="SHOW_USER" description="SHOW_USER_DESCR">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="display_name" type="list" default="0" label="DISPLAY_USERNAME_NAME" description="DISPLAY_USERNAME_NAME_DESCR">
                    <option value="0">USERNAME</option>
                    <option value="1">NAME</option>
                </field>

                <field name="userlink" type="radio" default="0" label="USERNAME_LINK" description="USERNAME_LINK_DESCR">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="userlink_software" type="list" default="jfusion" label="USERLINK_SOFTWARE" description="USERLINK_SOFTWARE_DESC">
                    <option value="cb">Community Builder</option>
                    <option value="custom">CUSTOM</option>
                    <option value="jfusion">JFusion</option>
                    <option value="jomsocial">JomSocial</option>
                    <option value="joomunity">Joomunity</option>
                </field>
                <field name="userlink_custom" type="text" size="20" default="" label="USERLINK_CUSTOM" description="USERLINK_CUSTOM_DESC" />

                <field name="avatar" type="radio" default="1"
                    label="AVATAR_IMAGE" description="AVATAR_IMAGE_DESCR">
                    <option value="0">HIDE</option>
                    <option value="1">SHOW</option>
                </field>
                <field name="avatar_height" label="AVATAR_HEIGHT" type="text" size="5" default="53"/>
                <field name="avatar_width" label="AVATAR_WIDTH" type="text" size="5" default="40"/>
                <field name="avatar_keep_proportional" label="AVATAR_KEEP_PROPORTIONAL" type="radio" default="0" description="AVATAR_KEEP_PROPORTIONAL_DESCR">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="avatar_software" type="list" default="jfusion" label="AVATAR_SOFTWARE" description="AVATAR_SOFTWARE_DESC">
                    <option value="cb">Community Builder</option>
                    <option value="gravatar">Gravatar</option>
                    <option value="jfusion">JFusion</option>
                    <option value="jomsocial">JomSocial</option>
                    <option value="joomunity">Joomunity</option>
                </field>

                <field name="debug" type="list" default="" label="DEBUG" description="DEBUG_DESCR">
                    <option value="">DEBUG_0</option>
                    <option value="1">DEBUG_1</option>
                </field>
            </fieldset>
        </fields>
    </config>
	
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
                    <option value="1">Use global</option>
                    <option value="0">No caching</option>
                </field>
                <field name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
            </fieldset>
        </fields>
    </config>
