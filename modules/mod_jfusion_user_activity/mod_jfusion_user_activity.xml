<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6" method="upgrade" client="site">
    <name>JFusion User Activity Module</name>
    <author>JFusion Development Team</author>
    <creationDate>March 2009</creationDate>
    <copyright>Copyright (C) 2008 JFusion. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>webmaster@jfusion.org</authorEmail>
    <authorUrl>www.jfusion.org</authorUrl>
    <version>2.1.2</version>
    <revision>$revision$</revision>
    <timestamp>$timestamp$</timestamp>
    <description>Module for displaying JFusion plugin user activity such as PMs, new forum messages link, etc.</description>
    <files>
        <filename module="mod_jfusion_user_activity">mod_jfusion_user_activity.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>

    <config>
        <fields name="params" addfieldpath="/administrator/components/com_jfusion/fields/">
            <fieldset name="basic">

                <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />

                <field name="JFusionPlugin" type="JFusionAdvancedParam" default="" feature="useractivity" label="JFUSION_PLUGIN" description="JFUSION_PLUGIN_DESCR" />

                <field name="itemid" type="JFusionItemid" size="5" default="" label="ITEMID" description="ITEMID_DESCR" />

                <field name="new_window" type="radio" class="btn-group" default="0" label="LINK_TARGET" description="LINK_TARGET_DESCR">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="alignment" type="list" default="center" label="TEXT_ALIGNMENT" description="TEXT_ALIGNMENT_DESCR">
                    <option value="left">LEFT</option>
                    <option value="center">CENTER</option>
                </field>
                <field name="avatar" type="radio" class="btn-group" default="1" label="AVATAR_IMAGE" description="AVATAR_IMAGE_DESCR">
                    <option value="0">HIDE</option>
                    <option value="1">SHOW</option>
                </field>
                <field name="avatar_software" type="list" default="jfusion" label="AVATAR_SOFTWARE" description="AVATAR_SOFTWARE_DESCR">
                    <option value="cb">Community Builder</option>
                    <option value="gravatar">Gravatar</option>
                    <option value="jfusion">JFusion</option>
                    <option value="jomsocial">JomSocial</option>
                    <option value="joomunity">Joomunity</option>
                </field>
                <field name="avatar_height" type="text" default="40" length="5" label="AVATAR_HEIGHT" description="AVATAR_HEIGHT_DESCR" />
                <field name="avatar_width" type="text" default="30" length="5" label="AVATAR_WIDTH" description="AVATAR_WIDTH_DESCR" />
                <field name="avatar_keep_proportional" label="AVATAR_KEEP_PROPORTIONAL" type="radio" class="btn-group" default="0" description="AVATAR_KEEP_PROPORTIONAL_DESCR">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="avatar_location" type="radio" default="left" label="AVATAR_LOCATION" description="AVATAR_LOCATION_DESCR">
                    <option value="top">TOP</option>
                    <option value="left">LEFT</option>
                </field>
                <field name="pmcount" type="radio" class="btn-group" default="1" label="PM_COUNT" description="PM_COUNT_DESCR">
                    <option value="0">HIDE</option>
                    <option value="1">SHOW</option>
                </field>
                <field name="viewnewmessages" type="radio" class="btn-group" default="1" label="PM_NEW_LINK" description="PM_NEW_LINK_DESCR">
                    <option value="0">HIDE</option>
                    <option value="1">SHOW</option>
                </field>
                <field name="login_msg" type="text" default="" label="LOGIN_MSG" description="LOGIN_MSG_DESCR" />
            </fieldset>

            <fieldset name="advanced">
                <field name="cache" type="radio" class="btn-group" default="0" label="Caching" description="Select whether to cache the content of this module">
                    <option value="1">Use global</option>
                    <option value="0">No caching</option>
                </field>
                <field name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
            </fieldset>
        </fields>
    </config>
</extension>
