<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.5" method="upgrade" client="site">
    <name>JFusion Whos Online Module</name>
    <author>JFusion Development Team</author>
    <creationDate>February 2009</creationDate>
    <copyright>Copyright (C) 2009 JFusion. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>webmaster@jfusion.org</authorEmail>
    <authorUrl>www.jfusion.org</authorUrl>
    <version>2.1.2</version>
    <revision>$revision$</revision>
    <timestamp>$timestamp$</timestamp>
    <description>JFusion's Who's Online Module displays the number of Guests and Registered Users (ones logged in) that are currently accessing JFusion Plugin software's.</description>

    <files>
        <filename module="mod_jfusion_whosonline">mod_jfusion_whosonline.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>

    <config>
        <fields name="params" addfieldpath="/administrator/components/com_jfusion/fields">
            <fieldset name="basic">
                <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />

                <field name="JFusionPluginParam" type="JFusionAdvancedParam" default="" label="JFUSION_PLUGIN" feature="whosonline" multiselect="true" description="JFUSION_PLUGIN_DESCR" />
            </fieldset>

            <fieldset name="advanced">
                <field name="cache" type="radio" class="btn-group" default="0" label="Caching" description="Select whether to cache the content of this module">
                    <option value="1">Use global</option>
                    <option value="0">No caching</option>
                </field>
                <field name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
            </fieldset>
        </fields>
    </config>
</extension>