<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="search" method="upgrade">
    <name>Search - JFusion</name>
    <author>JFusion Development Team</author>
    <creationDate>February 2009</creationDate>
    <author>JFusion Development Team</author>
    <authorEmail>webmaster@jfusion.org</authorEmail>
    <authorUrl>http://www.jfusion.org</authorUrl>
    <copyright>Copyright (C) 2009 JFusion. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>2.1.2</version>
    <revision>$revision$</revision>
    <timestamp>$timestamp$</timestamp>
    <description>Search content of JFusion plugins</description>

    <files>
        <filename plugin="jfusion">jfusion.php</filename>
    </files>

    <config>
        <fields name="params" addfieldpath="/administrator/components/com_jfusion/fields">
            <fieldset name="basic">
                <field name="JFusionPluginParam" type="JFusionAdvancedParam" default="" label="JFUSION_PLUGIN" feature="search" multiselect="true" description="JFUSION_PLUGIN_DESCR" />
            </fieldset>
        </fields>
    </config>
</extension>
