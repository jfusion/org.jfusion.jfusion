    <name>User - JFusion</name>
    <author>JFusion Development Team</author>
    <creationDate>July 2008</creationDate>
    <author>JFusion Development Team</author>
    <authorEmail>webmaster@jfusion.org</authorEmail>
    <authorUrl>http://www.jfusion.org</authorUrl>
    <copyright>Copyright (C) 2008 JFusion. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>2.1.2</version>
    <revision>$revision$</revision>
    <timestamp>$timestamp$</timestamp>
    <description>User Plugin for JFusion</description>

    <files>
        <filename plugin="jfusion">jfusion.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="mail_to_user"
                       type="radio"
                       default="1"
                       label="PLG_JFUSION_MAILTOUSER_LABEL"
                       description="PLG_JFUSION_MAILTOUSER_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>

